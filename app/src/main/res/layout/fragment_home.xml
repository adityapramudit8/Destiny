<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".Fragment.HomeFragment"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/home_kosong"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>
            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/destiny_logo"
                    android:layout_marginTop="-120dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularstd_medium"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#4A148C"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="40dp"
                    android:text="Learning with Destiny is easy and fun!"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Explore by Category"
                    android:fontFamily="@font/circularstd_medium"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:textColor="#282133"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/cd_linear_shape">

                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="6dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/kimia"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Chemistry"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="40dp"
                            android:paddingBottom="5dp"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/biologi"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Biology"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="40dp"
                            android:paddingBottom="5dp"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/fisika"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Physic"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="40dp"
                            android:paddingBottom="5dp"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/geografi"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Geographic"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="40dp"
                            android:paddingBottom="5dp"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ekonomi"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Economic"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="40dp"
                            android:paddingBottom="5dp"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/cd_linear_shape_2">
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/matematika"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Math"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="45dp"
                            android:layout_marginBottom="5dp"
                    />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/indonesia"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Indonesia"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="45dp"
                            android:layout_marginBottom="5dp"
                    />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/english"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="English"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="45dp"
                            android:layout_marginBottom="5dp"
                    />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/sosiologi"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Sociology"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="45dp"
                            android:layout_marginBottom="5dp"
                    />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Course"
                    android:fontFamily="@font/circularstd_medium"
                    android:textSize="14dp"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:textColor="#282133"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/cd_linear_full">
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/matematika"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Math"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="45dp"
                            android:layout_marginBottom="5dp"
                    />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ekonomi"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstd_medium"
                            android:textSize="9dp"
                            android:textColor="#282133"
                            android:text="Economic"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="45dp"
                            android:paddingBottom="5dp"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leveling"
                    android:fontFamily="@font/circularstd_medium"
                    android:textSize="14dp"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:textColor="#282133"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#FDFEFF">

                <ProgressBar
                        android:progress="50"
                        android:id="@+id/level_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/cd_progressbar"/>

                <TextView
                        android:text="Level 1"
                        android:id="@+id/level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabhome"
            app:backgroundTint="#FAA61A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_border_color_black_24dp" tools:ignore="VectorDrawableCompat"/>
</FrameLayout>