<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/cd_linear_full">

        <ImageView
                android:id="@+id/image_yt_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:background="@drawable/cd_image_view_rounded"
                android:src="@drawable/student"/>

        <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
        <LinearLayout
                android:weightSum="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:background="@drawable/cd_linear_full"
                android:orientation="horizontal">

            <TextView
                    android:layout_weight="1"
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:maxLines="3"
                    android:fontFamily="@font/circularstd_medium"
                    android:textSize="18dp"
                    android:text="faradilla"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_marginTop="-5dp"
                    android:id="@+id/waktu"
                    android:layout_marginLeft="90dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularstd_medium"
                    android:textSize="16dp"
                    android:textColor="#CBC4C4"
                    android:text="1 minute ago"/>

        </LinearLayout>
            <TextView
                    android:layout_weight=".4"
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:maxLines="3"
                    android:fontFamily="@font/circularstd_medium"
                    android:textSize="16dp"
                    android:textColor="#282133"
                    android:text="Itu tinggal di sederhana kan aja pake  persamaan trigono loh!"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>